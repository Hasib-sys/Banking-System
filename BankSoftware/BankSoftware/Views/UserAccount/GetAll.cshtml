@model IEnumerable<BankSoftware.Models.UserAccountModel>

@{
    ViewBag.Title = "GetAll";
}

<div class="container">
    <h2> User Accounts</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Account Number</th>
                    <th>Account Holder</th>
                    <th>Balance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.UA_NO)</td>
                        <td>@Html.DisplayFor(modelItem => item.UA_Holder)</td>
                        <td>@Html.DisplayFor(modelItem => item.Balance)</td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.UA_ID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


