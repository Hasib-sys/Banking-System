@model BankSoftware.Models.UserAccountModel

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <h2>Create User Account</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.UA_NO, "User Account Number", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.UA_NO, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Account Number" } })
                    @Html.ValidationMessageFor(model => model.UA_NO, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Balance, "User Account Balance", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Account Balance" } })
                    @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Create</button>
                @Html.ActionLink("Back to List", "GetAll", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
